<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Send Notification</title>
    <link
      rel="stylesheet"
      type="text/css"
      href="/styles/notification-center.css"
    />
    <script src="/scripts/notification-center.js" defer></script>
  </head>
  <body>
    <div class="container">
      <h2>Send Notification</h2>
      <div class="form-group">
        <label for="title">Title (required)</label>
        <input
          type="text"
          id="title"
          required
          placeholder="Radyo Klasik Online"
          value="Radyo Klasik Online"
        />
      </div>
      <div class="form-group">
        <label for="subtitle">Subtitle</label>
        <input type="text" id="subtitle" placeholder="" />
      </div>
      <div class="form-group">
        <label for="body">Body (required)</label>
        <input
          type="text"
          id="body"
          required
          placeholder="Morning Delight Başlıyor 🔴🎙️"
          value="Morning Delight Başlıyor 🔴🎙️"
        />
      </div>
      <div class="buttons">
        <button id="backToDashboard">Back to Dashboard</button>
        <button id="sendNotification">Send</button>
      </div>
      <div class="notification-count" id="notificationCount">
        Notifications sent: 0 (0%)
      </div>
    </div>
  </body>
</html>
